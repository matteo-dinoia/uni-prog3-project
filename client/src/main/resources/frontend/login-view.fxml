<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" stylesheets="@css/general.css, @css/login-view.css"
      fx:controller="frontend.LoginController">

    <Label styleClass="title" text="Insert username">
        <VBox.margin><Insets topRightBottomLeft="20.0" /></VBox.margin>
    </Label>

    <TextField fx:id="usernameField" text="testuser@gmail.com"> <!-- TODO remove text -->
        <VBox.margin><Insets left="20.0" right="20.0" /></VBox.margin>
    </TextField>

    <Button text="Login" onAction="#login">
        <VBox.margin><Insets topRightBottomLeft="20.0" /></VBox.margin>
    </Button>

</VBox>
