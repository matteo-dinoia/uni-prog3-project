<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            alignment="CENTER" stylesheets="@css/general.css"
            fx:controller="fontend.LoginController">

    <Label text="Insert username">
        <VBox.margin><Insets topRightBottomLeft="20.0" /></VBox.margin>
    </Label>

    <TextField fx:id="usernameField" maxWidth="200" text="testuser@gmail.com"> <!-- TODO remove -->
        <VBox.margin><Insets left="20.0" right="20.0" /></VBox.margin>
    </TextField>

    <Button text="Login" onAction="#login">
        <VBox.margin><Insets topRightBottomLeft="20.0" /></VBox.margin>
    </Button>

</VBox>
