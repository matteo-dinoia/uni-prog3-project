      fx:controller="fontend.component.QuickActionsController">
    <Button fx:id="newBtn" onAction="#newMail" maxWidth="Infinity" text="New" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="replyBtn" onAction="#newMail" maxWidth="Infinity" text="Reply" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="replyAllBtn" onAction="#newMail" maxWidth="Infinity" text="Reply All" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
    <Button fx:id="forwardBtn" onAction="#newMail" maxWidth="Infinity" text="Forward" HBox.hgrow="ALWAYS">
        <HBox.margin><Insets topRightBottomLeft="10.0"/></HBox.margin>
    </Button>
